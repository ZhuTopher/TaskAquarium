<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/task_card_height"
	card_view:cardCornerRadius="10dp"
	android:layout_margin="5dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/task_title_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/color_primary"
			android:paddingEnd="4dp"
			android:paddingRight="4dp"
			android:paddingStart="4dp"
			android:paddingLeft="4dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp">

			<TextView
				android:id="@+id/task_title"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="test titletest titletest titletest titletest titletest titletest titletest title"
				android:textSize="@dimen/task_title_font_size"
				android:textColor="@color/main_white"
				android:ellipsize="end"
				android:lines="1"
				android:layout_gravity="start"
				android:gravity="center"/>

			<!-- TODO: Use vertical ... icon and size properly
			<Button
				android:layout_width="wrap_content"
				android:layout_height="match_parent"/>
				-->

		</LinearLayout>

		<LinearLayout
			android:id="@+id/task_subtitle_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/color_primary_dark"
			android:paddingEnd="4dp"
			android:paddingRight="4dp"
			android:paddingStart="4dp"
			android:paddingLeft="4dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp">

			<TextView
				android:id="@+id/task_subtitle"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:text="test titletest titletest titletest titletest titletest titletest titletest title"
				android:textSize="@dimen/task_subtitle_font_size"
				android:textColor="@color/main_white"
				android:textStyle="italic"
				android:ellipsize="end"
				android:lines="1"
				android:layout_gravity="start"
				android:gravity="center"/>

			<LinearLayout
				android:id="@+id/task_progression_container"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:layout_weight="0">

				<TextView
					android:id="@+id/task_current_step"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="11"
					android:textSize="@dimen/task_subtitle_font_size"
					android:textColor="@color/main_white"
					android:textStyle="italic"
					android:layout_gravity="start"/>

				<TextView
					android:id="@+id/task_step_divider"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="/"
					android:textSize="@dimen/task_subtitle_font_size"
					android:textColor="@color/main_white"
					android:layout_gravity="center"/>

				<TextView
					android:id="@+id/task_total_steps"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="24"
					android:textSize="@dimen/task_subtitle_font_size"
					android:textColor="@color/main_white"
					android:textStyle="italic"
					android:layout_gravity="end"/>

			</LinearLayout>

		</LinearLayout>

		<RelativeLayout
			android:id="@+id/task_body_container"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingEnd="5dp"
			android:paddingRight="5dp"
			android:paddingStart="5dp"
			android:paddingLeft="5dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp">

			<!-- task_body will hold either the MainTask
		     description or the SubTask description -->
			<TextView
				android:id="@+id/task_body"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="test titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest titletest title"
				android:ellipsize="end"
				android:maxLines="4"/>


			<!-- TODO: Use checkmark for icon, and size properly
			<android.support.design.widget.FloatingActionButton
				android:id="@+id/home_fab"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:layout_margin="2dp"
				app:srcCompat="@drawable/ic_add_white_24px"/>
				-->

		</RelativeLayout>

	</LinearLayout>


</android.support.v7.widget.CardView>